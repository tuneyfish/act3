<h1>Listing shops</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Make</th>
    <th>Affiliations</th>
    <th>Specialties</th>
    <th>Amenities</th>
    <th>Phone number</th>
    <th>Fax number</th>
    <th>Email</th>
    <th>Website</th>
    <th>Raw address</th>
    <th>Address 1</th>
    <th>Address 2</th>
    <th>City</th>
    <th>Postal code</th>
    <th>Lat</th>
    <th>Lng</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><%= shop.name %></td>
    <td><%= shop.make %></td>
    <td><%= shop.affiliations %></td>
    <td><%= shop.specialties %></td>
    <td><%= shop.amenities %></td>
    <td><%= shop.phone_number %></td>
    <td><%= shop.fax_number %></td>
    <td><%= shop.email %></td>
    <td><%= shop.website %></td>
    <td><%= shop.raw_address %></td>
    <td><%= shop.address_1 %></td>
    <td><%= shop.address_2 %></td>
    <td><%= shop.city %></td>
    <td><%= shop.postal_code %></td>
    <td><%= shop.lat %></td>
    <td><%= shop.lng %></td>
    <td><%= link_to 'Show', shop %></td>
    <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
    <td><%= link_to 'Destroy', shop, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

